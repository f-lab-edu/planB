<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.planb.service.mapper.ShopInfoMapper">
  <select id="findByShopId" parameterType="long" resultType="shopInfo">
    select id,
           delivery_area,
           min_cooking_time,
           max_cooking_time,
           tip,
           introduction
    from planb.tbl_shop_info
    where id = #{shopId}
  </select>
</mapper>